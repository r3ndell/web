        <script>
            function onBtnNumClick(btn) {
                var textField = document.getElementById("panelOutput");
                var valu = btn.innerHTML
                
                textField.value = textField.value + valu
                // console.log(valu)
            }

            var savedVal = 0
            var sign = ''

            function calc(a, b, znak) {
                c = 0
                if (znak == "+") {
                    c = a + b
                } else {
                    if (znak == "-") {
                        c = a - b
                    }
                    else {
                        if (znak == "X") {
                            c = a * b
                        }
                        else {
                            if (znak == "/") {
                                c = a / b
                            }
                        }
                    }
                }
                if (znak == "C") {
                    c = 0
                }
                return c
            }


            function onBtnRezClick(btn) {              
                
                
                var panelOutput = document.getElementById("panelOutput");
                a = savedVal
                b = parseFloat(panelOutput.value)
                panelOutput.value = calc(a,b,sign) 
                //var valu = btn.innerHTML

            }

            function onBtnOperationClick(btn) {
                var textField = document.getElementById("panelOutput");
                sign = btn.innerHTML
                savedVal=parseFloat(textField.value)
                console.log(savedVal)
                textField.value = ''
            }


        </script>




