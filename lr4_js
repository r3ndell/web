        <script>
            function onButtonClick(btn) {
                var textField = document.getElementById("textField");
                var valu = parseInt(btn.innerHTML)
                textField.value = textField.value + valu
                // console.log(valu)
            }

            var Saved = 0
            var sign = ''

            function onButtonClickRez(btn) {
                var textField = document.getElementById("textField");
                //var valu = btn.innerHTML
            
                if (sign == "+") {

                    Saved = Saved + parseInt(textField.value)
                    document.getElementById("textField").value = ''

                } else {
                    if (sign == "-") {

                        Saved = Saved - parseInt(textField.value)
                        document.getElementById("textField").value = ''
                    }
                    else {
                        if (sign == "X") {
                            Saved = Saved * parseInt(textField.value)
                            document.getElementById("textField").value = ''
                        }
                        else {
                            if (sign == "/") {
                                Saved = Saved / parseInt(textField.value)
                                document.getElementById("textField").value = ''
                            }
                         
                                //Saved = Saved / parseInt(textField.value)
                        
                        }
                    }
                }
                document.getElementById("textField").value = Saved
                
                sign = ''      
                //Saved = 0
                console.log(Saved)
            }
            
            function onButtonClickSign(btn) {
                var textField = document.getElementById("textField");
                sign= btn.innerHTML  
                document.getElementById("textField").value = ''
            }
        </script>




